<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Border Layer -->
<item>
    <shape android:shape="rectangle">
        <!--            <solid android:color=""/> &lt;!&ndash; Background color &ndash;&gt;-->
        <corners android:radius="28dp"/> <!-- Corner radius -->
<!--        <stroke-->
<!--            android:width="5dp"-->
<!--            android:color="#8694A9"/> &lt;!&ndash; Border color &ndash;&gt;-->
    </shape>
</item>
<!-- Shadow Layer -->
<item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
    <shape android:shape="rectangle">
<!--        <solid android:color="@color/grey"/> &lt;!&ndash; Transparent background &ndash;&gt;-->
        <corners android:radius="18dp"/>
        <padding
            android:left="2dp"
            android:top="2dp"
            android:right="2dp"
            android:bottom="2dp"/>
        <gradient
            android:angle="90"
            android:startColor="#AA000000"
            android:endColor="#AA000000"
            android:type="linear"/>
    </shape>
</item>
</layer-list>


